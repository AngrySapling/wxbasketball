/* pages/my/my.wxss */
#my{
  background: #f5f5f5;
  min-height: 100vh;
}
.head{
  width: 100%;
  height: 538rpx;
  overflow:hidden;
  position: relative;
  background: #e3bc71;
}
.head .person{
  padding: 39rpx 0;
}
.head .person .my_img{
  height: 80px;
  width: 80px;
  margin: 0 auto;
  z-index: 0;
}
.head .person .name{
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.my_img image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
.my_content{
  position: relative;
  overflow: hidden;
  height: 300rpx;
}
.bgimg{
  background:#fff;
  position:absolute;
  left:50%;
  margin-left:-750rpx; 
  top: 29rpx;
  width:1500rpx;
  height: 1500rpx;
  border-radius: 750rpx;
}

.my_content .myvip{
  box-shadow: 10rpx 10rpx 100rpx #e5e5e5;
  position: relative;
  width: 80%;
  height: 113rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 20rpx;
  padding: 56rpx 32rpx 32rpx;
}
